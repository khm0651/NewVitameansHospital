<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/iv_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_wb_sunny_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_degree_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고강도"
        android:textColor="@color/my_blood_button_text_color"
        android:textSize="@dimen/sub_font_size"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/my_blood_text_state_background"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        app:layout_constraintLeft_toRightOf="@id/vLine1"
        app:layout_constraintRight_toRightOf="@id/vLine2"
        app:layout_constraintBottom_toTopOf="@id/hLine1"/>

    <TextView
        android:id="@+id/tv_date_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.06.22"
        android:textSize="@dimen/sub_font_size"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/hLine1"
        app:layout_constraintLeft_toRightOf="@id/vLine1"
        app:layout_constraintRight_toRightOf="@id/vLine2"/>

    <TextView
        android:id="@+id/tv_kind_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근력운동"
        android:textSize="@dimen/sub_font_size"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/hLine1"
        app:layout_constraintRight_toRightOf="@id/vLine3" />
    <ImageView
        android:id="@+id/iv_watch_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintLeft_toLeftOf="@id/vLine4"
        app:layout_constraintBottom_toBottomOf="@id/hLine1"/>
    <TextView
        android:id="@+id/tv_time_exercise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30분"
        android:textSize="@dimen/sub_font_size"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        app:layout_constraintLeft_toRightOf="@id/vLine5"
        app:layout_constraintBottom_toBottomOf="@id/hLine1"/>
    <TextView
        android:id="@+id/tv_kind_exercise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="걷기"
        android:textStyle="bold"
        android:textSize="@dimen/sub_font_size"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        app:layout_constraintTop_toBottomOf="@id/hLine1"
        app:layout_constraintRight_toRightOf="@id/vLine3" />
    <ImageView
        android:id="@+id/iv_watch_icon2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintLeft_toLeftOf="@id/vLine4"
        app:layout_constraintTop_toBottomOf="@id/hLine1"/>
    <TextView
        android:id="@+id/tv_time_exercise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40분"
        android:textSize="@dimen/sub_font_size"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        app:layout_constraintLeft_toRightOf="@id/vLine5"
        app:layout_constraintTop_toBottomOf="@id/hLine1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vLine1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vLine2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vLine3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vLine4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vLine5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hLine1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>